<%- include('./includes/headers.ejs') %>
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-10">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0 font-size-18">Dashboard</h4>
                        </div>
                    </div>
                    <div class="col-2">
                        <a href="javascript:void(0);" class="btn btn-primary" onclick="toggleForm()">
                            <i class="bx bx-plus align-middle"></i> Request Loan
                        </a>
                    </div>
                </div>

                <!-- Form container with hidden style initially -->
                <div id="jobFormContainer" style="display: none; margin-top: 20px;">
                    <form action="/request/loan" method="POST">
                        <div class="mb-3">
                            <label for="formrow-price-input" class="form-label">Amount</label>
                            <input type="number" class="form-control" name="amount" id="formrow-price-input" placeholder="Enter Price"
                                min="0" required>
                        </div>
                        <div class="mb-3">
                            <label for="formrow-loanduration-input" class="form-label">Loan Duration</label>
                            <select class="form-control" name="loanDuration" id="formrow-loanduration-input" required>
                                <option value="" disabled selected>Select Duration</option>
                                <option value="1">1 Month</option>
                                <option value="3">3 Months</option>
                                <option value="6">6 Months</option>
                            </select>
                        </div>
                
                        <div class="mb-3">
                            <label for="formrow-interestRate-input" class="form-label">Interest Rate Increase</label>
                            <input type="text" class="form-control" id="formrow-interestRate-input" placeholder="Interest Rate Increase"
                                readonly>
                        </div>
                
                        <div>
                            <button type="submit" class="btn btn-primary w-md">Submit</button>
                        </div>
                    </form>
                </div>
                <script>
                    // JavaScript to update interest rate based on loan duration
                    document.getElementById('formrow-loanduration-input').addEventListener('change', function () {
                        const duration = parseInt(this.value);
                        const interestRateInput = document.getElementById('formrow-interestRate-input');

                        // Calculate interest rate increase based on duration
                        let interestIncrease = 0;
                        if (duration === 1) {
                            interestIncrease = 10; // 10% increase for 1 month
                        } else if (duration === 3) {
                            interestIncrease = 30; // 10% per month, total 30% for 3 months
                        } else if (duration === 6) {
                            interestIncrease = 60; // 10% per month, total 60% for 6 months
                        }

                        interestRateInput.value = `${interestIncrease}%`;
                    });
                </script>
                
                <script>
                    // Function to toggle the form visibility
                    function toggleForm() {
                        const formContainer = document.getElementById("jobFormContainer");
                        formContainer.style.display = formContainer.style.display === "none" ? "block" : "none";
                    }
                </script>
                <!-- end page title -->

                <div class="row">
                    
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card mini-stats-wid">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <div class="flex-grow-1">
                                                <p class="text-muted fw-medium">DepositeBalance</p>
                                                <h4 class="mb-0">$<%= dashboard.depositeBalance %>
                                                </h4>
                                            </div>

                                            <div class="flex-shrink-0 align-self-center">
                                                <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                                    <span class="avatar-title">
                                                        <i class="bx bx-copy-alt font-size-24"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card mini-stats-wid">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <div class="flex-grow-1">
                                                <p class="text-muted fw-medium">EarningBalance</p>
                                                <h4 class="mb-0">$<%= dashboard.earningBalance%>
                                                </h4>
                                            </div>

                                            <div class="flex-shrink-0 align-self-center ">
                                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                                    <span class="avatar-title rounded-circle bg-primary">
                                                        <i class="bx bx-archive-in font-size-24"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card mini-stats-wid">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <div class="flex-grow-1">
                                                <p class="text-muted fw-medium">Withdrawals</p>
                                                <h4 class="mb-0">$<%= dashboard.withdrawals %>
                                                </h4>
                                            </div>

                                            <div class="flex-shrink-0 align-self-center">
                                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                                    <span class="avatar-title rounded-circle bg-primary">
                                                        <i class="bx bx-purchase-tag-alt font-size-24"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                        
                    </div>
                </div>
                <!-- end row -->
                <!-- end row -->

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title mb-4">Loan Requests</h4>
                                <div class="table-responsive">
                                    <table class="table align-middle table-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 20px;">
                                                    <div class="form-check font-size-16 align-middle">
                                                        <input class="form-check-input" type="checkbox" id="loanCheckAll">
                                                        <label class="form-check-label" for="loanCheckAll"></label>
                                                    </div>
                                                </th>
                                                <th class="align-middle">Loan ID</th>
                                                <th class="align-middle">Date</th>
                                                <th class="align-middle">Amount</th>
                                                <th class="align-middle">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (loans.length> 0) { %>
                                                <% loans.forEach(loan=> { %>
                                                    <tr>
                                                        <td>
                                                            <div class="form-check font-size-16">
                                                                <input class="form-check-input" type="checkbox">
                                                                <label class="form-check-label"></label>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <a href="javascript: void(0);" class="text-body fw-bold">
                                                                <%= loan._id %>
                                                            </a>
                                                        </td>
                                                       
                                                        <!-- Original Date in hidden span for JavaScript formatting -->
                                                        <td>
                                                            <span class="loan-date" data-date="<%= loan.createdAt %>">
                                                                <!-- Formatted date will appear here -->
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <%= loan.amount %>
                                                        </td>
                                                        <td>
                                                            <span
                                                                class="badge badge-pill badge-soft-<%= loan.status === 'Approved' ? 'success' : loan.status === 'Rejected' ? 'danger' : 'warning' %> font-size-11">
                                                                <%= loan.status %>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="6" class="text-center">No loan requests yet.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <script>
                    // JavaScript to format date in "10 Nov, 2024" format
                    document.addEventListener("DOMContentLoaded", function () {
                        const loanDates = document.querySelectorAll(".loan-date");

                        loanDates.forEach(dateElement => {
                            const originalDate = new Date(dateElement.dataset.date);

                            const options = { day: '2-digit', month: 'short', year: 'numeric' };
                            const formattedDate = originalDate.toLocaleDateString('en-GB', options);

                            dateElement.textContent = formattedDate;
                        });
                    });
                </script>


                <!-- end row -->
            </div>
            <!-- container-fluid -->
        </div>
        <!-- End Page-content -->

        <!-- Transaction Modal -->
        
        <!-- end modal -->

        <!-- subscribeModal -->
        <!-- end modal -->

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <script>document.write(new Date().getFullYear())</script> Â© LuxurPay.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-end d-none d-sm-block">
                            Design & Develop by JK.M Ids
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

<%- include('./includes/headers.ejs') %>
    <div class="dashboard-main-body">
        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
            <h6 class="fw-semibold mb-0">Tasks</h6>
            <ul class="d-flex align-items-center gap-2">
                <li class="fw-medium">
                    <a href="/dashboard" class="d-flex align-items-center gap-1 hover-text-primary">
                        <iconify-icon icon="solar:home-smile-angle-outline" class="icon text-lg"></iconify-icon>
                        Dashboard
                    </a>
                </li>
                <li>-</li>
                <li class="fw-medium">Task List</li>
                <% if (successmessage.length> 0) { %>
                    <div class="alert alert-success text-center mb-4" role="alert">
                        <%= successmessage[0]%>.
                    </div>
                    <% } %>
                        <% if (errormessage.length> 0) { %>
                            <div class="alert alert-danger text-center mb-4" role="alert">
                                <%= errormessage[0]%>.
                            </div>
                            <% } %>
            </ul>
        </div>

        <div class="card h-100 p-0 radius-12">
            
            <a href="/create/blog" class="btn btn-primary">
                <i class="bx bx-plus align-middle"></i> Start A New Blog
            </a>
            <div class="card-body p-24">
                <div class="table-responsive scroll-sm">
                    <table class="table bordered-table sm-table mb-0">
                        <thead>
                            <tr>
                                <tr>
                                    <th scope="col" colspan="2">Post</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Amount Made</th>
                                </tr>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (myBlogs && myBlogs.length> 0) { %>
                                <% myBlogs.forEach(blog=> { %>
                                    <tr>
                                        <!-- Blog Image -->
                                        <td style="width: 100px;">
                                            <img src="<%= blog.image %>" alt="" class="avatar-md h-auto d-block rounded">
                                        </td>
                                        <!-- Blog Title and Date -->
                                        <td>
                                            <h5 class="font-size-13 text-truncate mb-1">
                                                <a href="javascript: void(0);" class="text-dark">
                                                    <%= blog.title %>
                                                </a>
                                            </h5>
                                            <p class="text-muted mb-0">
                                                <%= new Date(blog.createdAt).toLocaleDateString('en-GB', { day: '2-digit' , month: 'short' ,
                                                    year: 'numeric' }) %>
                                            </p>
                                        </td>
                                        <!-- Blog Likes -->
                                        <td>
                                            <i class="bx bx-time align-middle me-1"></i>
                                            Pending Review
                                        </td>
                                        <!-- Blog Revenue -->
                                        <td>
                                            <i class="bx bx-dollar align-middle me-1"></i>
                                            <%= blog.revenue %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <!-- If there are no blogs, show this message -->
                                            <tr>
                                                <td colspan="4" class="text-center">No blogs available</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <footer class="d-footer">
        <div class="row align-items-center justify-content-between">
            <div class="col-auto">
                <p class="mb-0">Â© 2024 Metapay. All Rights Reserved.</p>
            </div>
            <div class="col-auto">
                <p class="mb-0">Made by <span class="text-primary-600">AdKe</span></p>
            </div>
        </div>
    </footer>
    </main>
    <%- include('./includes/footer.ejs') %>
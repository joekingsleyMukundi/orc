        <!-- Include Socket.IO Client Library -->
        
        <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
        <script>
            // Establish a connection to the server
            const socket = io();

            // User-specific data
            const userId = '<%= user._id %>';  // Assuming userId is passed from the server

            // Join the user-specific room to receive updates only for this user
            socket.emit('joinRoom', userId);
            const activityList = document.getElementById('activityList');

                // Function to format the date from the string, assuming it's in 'dd MMM' format
                const extractDate = (activityString) => {
                    const datePattern = /at (.+)$/; // Matches the date part after 'at '
                    const match = activityString.match(datePattern);
                    return match ? match[1] : '';   // Returns the date (e.g., '22 Nov')
                };

                // Function to extract the activity from the string, excluding the date
                const extractActivity = (activityString) => {
                    const activityPattern = /^(.*) at /; // Matches the part before 'at '
                    const match = activityString.match(activityPattern);
                    return match ? match[1] : '';   // Returns the activity description
                };


            // Listen for user-specific activity updates
            // Listen for activity updates from Socket.IO
                socket.on('activityUpdate', (newActivityString) => {
                    // Destructure the string into the activity and the date
                    const activity = extractActivity(newActivityString);
                    const date = extractDate(newActivityString);

                    // Remove "No activity" message if it exists
                    const noActivityMessage = document.getElementById('noActivityMessage');
                    if (noActivityMessage) {
                        noActivityMessage.remove();
                    }

                    // Create a new activity list item
                    const newActivityItem = document.createElement('li');
                    newActivityItem.classList.add('event-list');
                    newActivityItem.innerHTML = `
            <div class="event-timeline-dot">
                <i class="bx bx-right-arrow-circle font-size-18"></i>
            </div>
            <div class="d-flex">
                <div class="flex-shrink-0 me-3">
                    <h5 class="font-size-14">${date} <i class="bx bx-right-arrow-alt font-size-16 text-primary align-middle ms-2"></i></h5>
                </div>
                <div class="flex-grow-1">
                    <div>${activity}</div>
                </div>
            </div>
        `;

                    // Insert the new activity at the top of the list
                    activityList.insertBefore(newActivityItem, activityList.firstChild);

                    // Limit to the latest 5 activities
                    if (activityList.children.length > 5) {
                        activityList.removeChild(activityList.lastChild);
                    }
                });

            // Listen for live product price updates
            socket.on('priceUpdate', (updatedProducts) => {
                    // Sort products by price in descending order
                    const sortedProducts = updatedProducts.sort((a, b) => b.price - a.price);

                    // Update the top product name and price in the main card area (1st product)
                    const topProduct = sortedProducts[0];
                    document.getElementById('top-product-name').textContent = topProduct.name;
                    document.getElementById('top-product-count').textContent = `$${topProduct.price}`;

                    // Update the table with 2nd to 4th products
                    const productTable = document.getElementById('top-products-table');
                    productTable.innerHTML = '';  // Clear the current table content

                    const secondToFourthProducts = sortedProducts.slice(1, 4);
                    secondToFourthProducts.forEach((product, index) => {
                        const percentage = Math.floor(Math.random() * 100);  // Progress bar percentage

                        const row = `
                <tr>
                    <td style="width: 30%">
                        <p class="mb-0">${product.name}</p>
                    </td>
                    <td style="width: 25%">
                        <h5 class="mb-0">$${product.price}</h5>
                    </td>
                    <td>
                        <div class="progress bg-transparent progress-sm">
                            <div class="progress-bar bg-${getProgressColor(index)} rounded" role="progressbar" style="width: ${percentage}%" aria-valuenow="${percentage}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </td>
                </tr>
            `;
                        productTable.insertAdjacentHTML('beforeend', row);
                    });
                })
                function getProgressColor(index) {
                    const colors = ['primary', 'success', 'warning'];
                    return colors[index % colors.length];  // Rotate colors for progress bars
                }
            </script>
